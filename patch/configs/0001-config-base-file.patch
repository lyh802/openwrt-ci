@@ -60,7 +60,7 @@ generate_static_network() {
 	fi
 }
 
-addr_offset=2
+addr_offset=4
 generate_network() {
 	local ifname macaddr protocol type ipaddr netmask
 
@@ -100,8 +100,8 @@ generate_network() {
 		static)
 			local ipad
 			case "$1" in
-				lan) ipad=${ipaddr:-"192.168.1.1"} ;;
-				*) ipad=${ipaddr:-"192.168.$((addr_offset++)).1"} ;;
+				lan) ipad=${ipaddr:-"10.1.4.10"} ;;
+				*) ipad=${ipaddr:-"10.1.$((++addr_offset)).10"} ;;
 			esac
 
 			netm=${netmask:-"255.255.255.0"}
@@ -241,8 +241,9 @@ generate_static_system() {
 	uci -q batch <<-EOF
 		delete system.@system[0]
 		add system system
-		set system.@system[-1].hostname='OpenWrt'
-		set system.@system[-1].timezone='UTC'
+		set system.@system[-1].hostname="OpenWrt-$(cat /sys/class/net/wlan0/address | awk -F ":" '{ print $5""$6 }'| tr a-z A-Z)"
+		set system.@system[-1].timezone='CST-8'
+		set system.@system[-1].zonename='Asia/Shanghai'
 		set system.@system[-1].ttylogin='0'
 		set system.@system[-1].log_size='64'
 		set system.@system[-1].urandom_seed='0'
@@ -251,10 +252,14 @@ generate_static_system() {
 		set system.ntp='timeserver'
 		set system.ntp.enabled='1'
 		set system.ntp.enable_server='0'
-		add_list system.ntp.server='0.openwrt.pool.ntp.org'
-		add_list system.ntp.server='1.openwrt.pool.ntp.org'
-		add_list system.ntp.server='2.openwrt.pool.ntp.org'
-		add_list system.ntp.server='3.openwrt.pool.ntp.org'
